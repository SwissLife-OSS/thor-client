<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Thor.Core.Http</PackageId>
    <AssemblyName>Thor.Extensions.Http</AssemblyName>
    <RootNamespace>Thor.Extensions.Http</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Description>Provides HTTP logger build on .Net Standard 2.0.</Description>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net5.0'">
    <PackageReference Include="Microsoft.Extensions.Http" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.1'">
    <PackageReference Include="Microsoft.Extensions.Http" Version="3.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Core\src\Core\Core.csproj" />
    <ProjectReference Include="..\..\..\Core\src\Session.Abstractions\Session.Abstractions.csproj" />
  </ItemGroup>

</Project>
